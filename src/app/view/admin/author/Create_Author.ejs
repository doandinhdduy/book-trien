
<div class="mt-4">
    <div class="col-sm-6 col-lg-4">
        <h1>Create Author</h1>
        <form method="POST" action="/admin/author/store" style="width: 30rem; margin: auto;" >
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name_author" name="name_author">
            </div>
            <div class="form-group">
                <label for="name">Alias</label>
                <input type="text" class="form-control" id="alias_author" name="alias_author">
            </div>
            <div class="form-group">
                <label for="name">Description</label>
                <input type="text" class="form-control" id="description_author" name="description_author">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
    </div>
</div>
<%- contentFor('script') %>
