
<div class="mt-4">
    <div class="edit-product">
            <h1 style="text-align: center;">Edit Category</h1>
            <form method="POST" action="/admin/category/<%=category._id%>/update?_method=PUT" style="width: 30rem; margin: auto;">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" value="<%=category.name_category%>" id="name_category" name="name_category">
                </div>
                <div class="form-group">
                    <label for="des">Description</label>
                    <input type="text" class="form-control"value="<%=category.description_category%>" id="description_category" name="description_category"></input><br>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>    
</div><br>
<!-- js -->
<%- contentFor('script') %>
