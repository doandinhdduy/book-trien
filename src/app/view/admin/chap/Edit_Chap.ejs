
    <div class="edit-product">
            <h1 style="text-align: center;">Edit Chapter</h1>
            <form method="POST" action="/admin/chap/<%=data.chap._id%>/update?_method=PUT" style="width: 30rem; margin: auto;">
                <div class="form-group">
                    <label for="name">Number Chap</label>
                    <input type="text" class="form-control" value="<%=data.chap.number_chap%>" id="number_chap" name="number_chap">
                </div>
                <div class="form-group">
                    <label for="name">Context</label>
                    <input type="text" class="form-control" value="<%=data.chap.context%>" id="context" name="context">
                </div>
                <div class="form-group">
                    <label for="name">Description</label>
                    <textarea class="form-control" aria-label="With textarea" id="description_chap" name="description_chap"><%=data.chap.description_chap%></textarea>
                </div><br>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
</div><br>
<!-- js -->
<%- contentFor('script') %>
