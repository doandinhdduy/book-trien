

<div class="mt-4">
    <div class="col-sm-6 col-lg-4">
        <h1 style="text-align: center;">Create Chapter</h1>
        <form method="POST" action="/admin/chap/<%= id%>/store" style="width: 30rem; margin: auto;">
      
            <div class="form-group">
                <label for="name">Number Chap</label>
                <input type="number" class="form-control" id="number_chap" name="number_chap">
            </div>
            <div class="form-group">
                <label for="name">Context</label>
                <input type="text" class="form-control" id="context" name="context">
            </div>
            <div class="form-group">
                 <span class="input-group-text">Description</span>
                 <textarea class="form-control" aria-label="With textarea" id="description_chap" name="description_chap"></textarea>
            </div>
            <div class="form-group">
                 <input type="text" class="form-control" id="story" name="story" value="<%=id%>" hidden><br>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
    </div>
</div>
<%- contentFor('script') %>
